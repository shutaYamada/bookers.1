<main>
    <h1 class="footer"><strong>Editing Book</strong></h1>

    <% if @book.errors.any? %>
        <%= @book.errors.count %>
            <ul>
                <% @book.errors.full_messages.each do |message| %>
                <li><%= message %>errors prohibited this book from being saved:</li>
                <% end %>
            </ul>
    <% end %>


    <%= form_with model: @book do |f| %>
    <div class="edit-label">
        <%= f.label :title, "title" %>
    </div> 
    <div>
        <%= f.text_field :title %>
    </div>
    <div class="edit-label">
        <%= f.label :body, "body" %>
    </div>
    <div>
        <%= f.text_area :body %>
    </div>
    <div>
        <%= f.submit "Update Book"%>
    </div>
    <% end %>

    <%= link_to 'Show', book_path(@book.id), class: 'link' %>
    <%= link_to 'Back', books_path , class: 'link' %>
</main>