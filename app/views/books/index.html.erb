<main>
    <%= flash[:notice] %>
    <h1 class="footer"><strong>Books</strong></h1>

    <table>
        <thead>
            <tr>
                <th><strong>Title</strong></th>
                <th><strong>Body</strong></th>
            </tr>
        </thead>

        <tbody>
            <% @books.each do |book| %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td> <%= link_to 'Show', book_path(book.id), class: 'link' %> </td>
                <td> <%= link_to 'Edit', edit_book_path(book.id), class: 'link' %> </td>
                <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => '本当に削除しますか?' %></td>
                <br>
                
                
            </tr>
            <% end %>
        </tbody>
    </table>    

    <h2 class="index-h2"><strong>New Book</strong></h2>

    <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
        <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>

    <%= form_with model: @book  do |f| %>
    <div class="new">
        <div >       
            <h4>Title</h4>
            <%= f.text_field :title %>
        </div>  
	
        <div class="new-div">
            <h4>Body</h4>
            <%= f.text_area :body %>
        </div>

        <div class="new-div">
            <%= f.submit 'Create Book' %>
        </div>
        <% end %>
    </div>
</main>